
<!DOCTYPE html>
<html>
@{
    ViewBag.Title = "Home Page";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/gijgo/combined/gijgo.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <link href="~/Content/css/Voucher.css" rel="stylesheet" />

</head>
<body>
    <script type="text/javascript">


 $(document).ready(function () {

            var gridVenta = $("#gridVenta").grid({
                
                uiLibrary: "bootstrap",
                width: 200,
                columns: [
                { field: "Dia", title: "Venta Diaria", type: 'decimal', sortable: true, width: 30 },             
                { field: "DescripcionDia", title: "Tipo de pago", sortable: true, width: 30 },
                { field: "TotalDia", hidden: true },
                 ],
                  
            });


            var gridVentaMes = $("#gridVentaMes").grid({

                uiLibrary: "bootstrap",
                width: 200,
                columns: [
                { field: "Mes", title: "Venta del Mes", type: 'decimal', sortable: true, width: 30 },             
                { field: "DescripcionMes", title: "Tipo de pago", sortable: true, width: 30 },
                { field: "TotalMes", hidden: true  },
                ],

            });

            gridVentaMes.on('cellDataBound', function (e, $displayEl, id, column, record) {
               
                if ('TotalMes' === column.field) {
                    $('#totalMes').val(record.TotalMes);
                }
            });
            gridVenta.on('cellDataBound', function (e, $displayEl, id, column, record) {
               
                if ('TotalDia' === column.field) {
                    $('#totalDia').val(record.TotalDia);
                    
                }
            });
 });


 </script>

    <div id="homeVenta" class="row">

        <div class="row">
            <div class="col-md-6 ">
                <img class="center-block" src="~/Content/images/animaliaHome.gif" alt="" />
            </div>
        </div>
        <div id="gridDiaSell" class="col-md-6">
            <span class="pull-left"></span>
            <table id="gridVenta" data-source="@Url.Action("GetSell")"></table>
            
        </div>
        <div  id="gridMesSell" class="col-md-3 offset1">
            <span class="pull-right"></span>
            <table id="gridVentaMes" data-source="@Url.Action("GetSellDay")"></table>
        </div>
       
        <div id="totalDivHome" class="form-group row">
            
            <div id="totalDivDia" class="col-xs-2">
                <label for="ex2">Total Día</label>
                <input class="form-control" id="totalDia" type="text">
            </div>
            <div id="totalDivMes" class="col-xs-2">
                <label for="ex3">Total Mes</label>
                <input class="form-control" id="totalMes" type="text">
            </div>
       
    </div>
       
        </div>
</body>
</html>

